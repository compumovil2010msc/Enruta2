<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/layout_left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reply_card"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:id="@+id/card_left"
            android:layout_gravity="left"
            >
            <TextView
                android:id="@+id/reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Doe"
                android:textColor="@color/reply_party"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />
            <TextView
                android:id="@+id/reply_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:padding="4dp"
                android:visibility="visible"
                android:text="Respuesta del coordinador"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reply_time"
                android:layout_gravity="right"
                android:text="8:30"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/layout_right"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:id="@+id/card_right"
            android:visibility="visible"
            android:background="@drawable/message_card"
            android:layout_gravity="right"
            >
            <TextView
                android:id="@+id/message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/reply_party"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"
                android:visibility="visible"
                android:padding="4dp"
                android:text="Mi respuesta no necesita nombre" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_time"
                android:layout_gravity="right"
                android:text="8:30"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>